{
  "name": "donkey-gateway",
  "version": "1.0.2",
  "description": "API Gateway based on static configuration files",
  "main": "lib/donkey.js",
  "types": "lib/donkey.d.ts",
  "scripts": {
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A .",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "format": "prettier --write \"*.ts\" \"middlewares/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && UV_THREADPOOL_SIZE=8 node build/donkey.js --run",
    "backend": "node tests/backend.js"
  },
  "files": [
    "build/**/*"
  ],
  "author": "batiste.bieler@gmail.com",
  "license": "ISC",
  "dependencies": {
    "commander": "~7.2.0",
    "got": "~11.8.2",
    "rate-limit-redis": "~2.1.0"
  },
  "devDependencies": {
    "@types/node": "~15.12.4",
    "@types/rate-limit-redis": "~1.7.2",
    "prettier": "~2.4.1",
    "tslint": "~6.1.3",
    "tslint-config-prettier": "~1.18.0",
    "typescript": "~4.3.4"
  }
}
